{% extends '::'~awhs.template~'/base_dashboard.html.twig' %}

{% trans_default_domain "service" %}

{% block title %} {{ app_name }} - Facture n°{{ invoice.id }}{% endblock %}

{% block menu_user_money %}{{ client.money }}{% endblock %}
{% block menu_user_lastip %}{{ client.lastip }}{% endblock %}
{% block sidebarMenuDashboardActive %} active{% endblock %}

{% block fastNavigation %}{% endblock %}
{% block pageHeader %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Choisissez la méthode de paiement</h3>
                </div>
                <div class="box-body no-padding">
                    <div class="col-md-12">
                        <p style="text-align:center">Vous avez {{ user.money|number_format(2, '.', ',') }} crédits AWHS
                            sur votre compte.
                        <p/>
                    </div>
                    <div class="col-md-4">
                        <!--<form action="{{ path('awhs_core_invoice_pay', {'invoice_id': invoice.id}) }}" method="post">
						<button type="submit" name="payment_name" value="paypal_express_checkout">Payer avec Paypal</button>
					</form>-->
                        <form action="{{ path('awhs_core_invoice_pay', {'invoice_id': invoice.id}) }}" method="post">
                            <button type="submit" name="payment_name" value="credit">Payer avec mon crédit AWHS</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.row -->
{% endblock %}